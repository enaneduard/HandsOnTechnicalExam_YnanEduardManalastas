<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="480dp"
    android:layout_gravity="center"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">


        <ImageButton
            android:id="@+id/imgbtnClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@null"
            app:srcCompat="@drawable/x_mark"
            tools:ignore="SpeakableTextPresentCheck" />


        <ImageView
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:gravity="center"
            app:srcCompat="@drawable/ic_stateicon"
            />

        <TextView
            android:id="@+id/stateName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="State"
            android:fontFamily="@font/futureheavy"
            android:textColor="#34465E"
            android:textSize="20sp"
            android:layout_margin="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/stateID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ID"
            android:fontFamily="@font/futurabook"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="3dp"
            android:textColor="#34465E"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/stateyear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Year"
            android:textColor="#34465E"
            android:fontFamily="@font/futurabook"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="3dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/statepopulation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Population"
            android:fontFamily="@font/futurabook"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="3dp"
            android:textColor="#34465E"
            android:textSize="18sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/insertdelete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save"
            android:layout_marginTop="35dp"
            android:background="@drawable/custom_button"
            />
    </LinearLayout>

</androidx.cardview.widget.CardView>